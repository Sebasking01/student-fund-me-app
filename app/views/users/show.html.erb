            <%= form_tag do |f| %>
            <%= label_tag student.student.first_name %>
            <%= select_tag 'name', options_for_select(Challenge.all.collect{ |u| [u.name] })
        %>
            <%= submit_tag('challenge') %>
          <% end %>
            <br/>
         <% end %>

